<mvc:View controllerName="logaligroup.Lists.controller.ListTypes"
            xmlns:mvc="sap.ui.core.mvc"
            xmlns:core="sap.ui.core"
            xmlns:layout="sap.ui.layout"
            displayBlock="true"
            xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <IconTabBar>
                            <items>
                                <IconTabFilter text="{i18n>objectList}">
                                    <List items="{/Products}">
                                        <items>
                                            <ObjectListItem title="{Material} {Brand} {Model}"
                                                        number="{Price}"
                                                        numberUnit="{Currency}"
                                                        type="Detail">
                                                <ObjectAttribute text="{Brand}"></ObjectAttribute>
                                                <ObjectAttribute text="{Weight}"></ObjectAttribute>
                                            </ObjectListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>
                                <IconTabFilter text="{i18n>standardList}">
                                    <List items="{/Products}">
                                        <items>
                                            <StandardListItem title="{Material} {Brand} {Model}"
                                                            description="{Weight}"
                                                            info="{Price} {Currency}"
                                                            type="Active" />
                                        </items>
                                    </List>
                                </IconTabFilter>
                                <IconTabFilter text="{i18n>inputList}">
                                    <List items="{/Products}">
                                        <items>
                                            <InputListItem label="{Brand}">
                                                <Select items="{Properties}">
                                                    <core:Item key="{Id}" text="{Text}" />
                                                </Select>
                                            </InputListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>
                                <IconTabFilter text="{i18n>notificationList}">
                                    <List items="{/News}">
                                        <items>
                                            <NotificationListItem title="{Title}"
                                                description="{Description}"
                                                showCloseButton="{ShowCloseButton}"
                                                priority="{Priority}"
                                                unread="{Unread}"
                                                authorName="{Author}" />
                                        </items>
                                    </List>
                                </IconTabFilter>
                                <IconTabFilter text="{i18n>customList}"></IconTabFilter>
                            </items>
                        </IconTabBar>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
